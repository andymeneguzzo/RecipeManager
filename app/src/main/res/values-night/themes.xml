<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema scuro basato su Material3 -->
    <style name="Theme.RecipeManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colori primari -->
        <item name="colorPrimary">#FAB10D</item>
        <item name="colorPrimaryContainer">#FFD54F</item>
        <item name="colorOnPrimary">#434343</item>

        <!-- Colori secondari (accento) -->
        <item name="colorSecondary">#F57C00</item>
        <item name="colorSecondaryContainer">#F57C00</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background e Surface: per il dark, utilizziamo il nero -->
        <item name="android:colorBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Testi ed EditText: testi chiari su sfondo scuro -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:editTextColor">#FFFFFF</item>
    </style>
</resources>